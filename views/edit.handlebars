<div class="dashboard-card">
    <div class="c-header">
        <h2>Edit Post</h2>
    </div>
    <div class="card-body content-card">
        <input type="hidden" name="post-id" value="{{ post.id }}" id="post-id" />
        <div class="form-group">
            <label class="form-label" for="title">Title:</label>
            <input type="text" name="title" id="title" value="{{ post.title }}" class="col-sm-12 form-input" />
        </div>
        <div class="form-group">
            <label class="form-label" for="content">Content:</label>
            <textarea type="text" name="content" class="form-input" id="content">{{ post.content }}</textarea>
        </div>
        <button type="submit" class="button btn btn-primary" id="update-btn">Update</button>
        <button type="button" id="delete-btn" class="button del-btn btn btn-primary">Delete</button>
    </div>
</div>

<script src="/js/edit.js"></script>