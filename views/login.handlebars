<div class="container">
    <div class="col-sm-12 log-form">
        <div class="login-text">
            <h2 class="page-title">Login</h2>
        </div>
        <form id="login-form">
            <div class="form-group">
                <label for="name">Username:</label>
                <input class="col-sm-12 form-input" type="text" id="username" name="username"/>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input class="col-sm-12 form-input" type="text" id="password" />
            </div>
            <div class="form-group">
                <button class="col-sm-12 btn btn-primary" type="submit" id="login">Login</button>
            </div>
            <a class="nav-link text-center btn btn-primary white" href="/signup">Sign up Here!</a>
        </form>
    </div>
</div>

<script src="/js/login.js"></script>