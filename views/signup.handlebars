<div class="container">
    <div class="row">
        <div class="col-sm-12 sign-form">
            <h2 class="page-title">Sign Up</h2>
            <form id="signup-form">
                <div class="form-group">
                    <label for="name">Username:</label>
                    <input name="name" class="col-sm-12 form-input" type="text" id="signupusername" />
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input name="password" class="col-sm-12 form-input" type="text" id="signuppassword" />
                </div>
                <div class="form-group">
                    <button class="col-sm-12 btn btn-primary" type="submit" id="signup">Sign Up</button>
                </div>
                <a class="nav-link text-center" href="/login">If you already have an account, log in</a>
            </form>
        </div>
    </div>
</div>

<script src="/js/signup.js"></script>